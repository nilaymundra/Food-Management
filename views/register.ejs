    <h1>Register</h1>

    <h4>Hello <%= user.name %> </h4>

    <form action="/register" method="POST">
        <div class="mobileNumber">
            <label for="mobileNumber">Phone Number</label>
            <input type="num" name="mobileNumber" id="mobileNumber" required>
        </div>
        <div class="street">
            <label for="street">Street</label>
            <input type="text" name="street" id="street">
        </div>
        <div class="city">
            <label for="city">City</label>
            <input type="text" name="city" id="city" required>
        </div>
        <div class="pinCode">
            <label for="pinCode">Pin Code</label>
            <input type="num" name="pinCode" id="pinCode" required>
        </div>        

        <input type="hidden" name="emailId" value=<%= user.email %>>

        <div class="type">
            <input type="radio" name="kind" value="buyer" required id="buyer">
            <label for="buyer">Buyer</label>

            <input type="radio" name="kind" value="seller" id="seller">
            <label for="seller">Seller</label>
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
    </form>

